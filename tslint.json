{
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules"
    ],
    "rules": {
        "arrow-parens": true,
        "object-literal-shorthand": true,
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "curly": true,
        "forin": false,
        "max-line-length": [
            true,
            120,
            4
        ],
        "no-bitwise": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-console": [
            true,
            "log",
            "error",
            "info",
            "assert",
            "trace"
        ],
        "no-debugger": true,
        "no-empty": true,
        "no-irregular-whitespace": true,
        "no-consecutive-blank-lines": true,
        "no-shadowed-variable": true,
        "no-trailing-whitespace": true,
        "no-unused-variable": [
            true
        ],
        "one-variable-per-declaration": [
            true
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace",
            "check-else",
            "check-catch",
            "check-finally"
        ],
        "valid-typeof": true,
        "no-eval": true,

        "no-reference": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "no-internal-module": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ]

    }
}